<div class="page-header">
	<h1>All microposts</h1>
</div>

<%= link_to "Post New", new_micropost_path, :class => "btn btn-success newStatusBtn" %>

<div class="post_items">
	<% @microposts.each do |mPost| %>
	<div class="item borderbox borderRadius_6px">
		
		<div class="item_title">
			<%= link_to User.find(mPost.user_id).name, User.find(mPost.user_id), :class => "poster" %>
			<span class="timeAgo"><%= "- " + time_ago_in_words(mPost.created_at) + " ago" %></span>
			<%= image_tag 'user1.png', :class => 'user_icon borderRadius_6px'%>
		</div>
		<p class="post"><%= mPost.content %></p>
		
		<div class="meta">
			<%= link_to "Show", mPost %> 
			<span class="admin">
				<%= link_to "Edit", edit_micropost_path(mPost.id) %>
				<%= link_to "Delete", mPost, method: :delete, data: { confirm: 'Are you sure?'} %>
			</span>
		</div>
	</div>	
	<% end %>
</div>



